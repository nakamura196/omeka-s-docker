# Domain Configuration
DOMAIN=xxx.yyy.zzz

# Let's Encrypt Configuration
ACME_EMAIL=admin@example.com

# Traefik Dashboard Authentication
# Generate with: echo $(htpasswd -nb admin your-password) | sed -e s/\\$/\\$\\$/g
TRAEFIK_AUTH=admin:$2y$10$lqI3LwFvwKKKoZJ8bCgi8OokqLYrZJPEtAAUUSBKJD5pP8XmPcIlm

# MySQL/MariaDB Configuration
MYSQL_ROOT_PASSWORD=your-secure-root-password-here
MYSQL_DATABASE=omeka_db
MYSQL_USER=omeka_user
MYSQL_PASSWORD=your-secure-db-password-here

# Omeka Configuration
OMEKA_VERSION=4.1.1

# SendGrid Configuration (Optional)
SENDGRID_API_KEY=your-sendgrid-api-key-here
MAIL_FROM_ADDRESS=noreply@xxx.yyy.zzz
MAIL_FROM_NAME=Omeka Site

# PHP Configuration (メモリ制限増加)
PHP_MEMORY_LIMIT=512M
PHP_UPLOAD_MAX_FILESIZE=100M
PHP_POST_MAX_SIZE=100M

# Omeka S API Configuration (for scripts)
# Get these from: Admin → Users → Your Profile → API keys
OMEKA_API_URL=https://xxx.yyy.zzz
OMEKA_API_KEY_IDENTITY=
OMEKA_API_KEY_CREDENTIAL=